{
  "clearMocks": true,
  "verbose": true,
  "coverageDirectory": "coverage",
  "moduleFileExtensions": [
    "js",
    "json",
    "jsx",
    "ts",
    "tsx",
    "node"
  ],
  "testEnvironment": "node",
  "testMatch": [
    "**/test/__tests__/**/*.[jt]s?(x)",
    "**/test/?(*.)+(spec|test).[tj]s?(x)"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "/node_modules/"
  ],
  "reporters": ["default"],
  "globals": {
    "ts-jest": {
      "tsconfig": "tsconfig.json"
    }
  }
}
